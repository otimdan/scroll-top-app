{% comment %}
Scroll to Top Button Snippet
Renders button with settings from shop metafield (set by the app)
Add this to your theme.liquid just before closing </body> tag:
  {% render 'scroll-to-top' %}
{% endcomment %}

{% assign settings = shop.metafields.scroll_top_app.settings.value | default: '{"bgColor":"#28A745","hoverColor":"#1C7530","iconColor":"#FFFFFF","buttonShape":"circle","buttonPosition":"right","showOnHome":false,"showOnProduct":false,"showOnCollection":false,"showOnAll":true}' %}

<style>
  .scroll-to-top-button {
    position: fixed;
    z-index: 9999;
    border: none;
    cursor: pointer;
    font-size: 20px;
    transition: all 0.3s ease;
    display: none;
    width: 60px;
    height: 60px;
    padding: 0;
    font-weight: bold;
  }

  .scroll-to-top-button.circle {
    border-radius: 50%;
  }

  .scroll-to-top-button.square {
    border-radius: 4px;
  }

  .scroll-to-top-button.right {
    right: 20px;
  }

  .scroll-to-top-button.left {
    left: 20px;
  }

  .scroll-to-top-button.show {
    display: flex;
    align-items: center;
    justify-content: center;
    bottom: 20px;
  }
</style>

<script>
  // Settings from shop metafield
  const buttonSettings = {{ settings | json }};

  function shouldShowButton() {
    const url = window.location.href;
    
    if (buttonSettings.showOnAll) return true;
    if (buttonSettings.showOnHome && url === window.location.origin + '/') return true;
    if (buttonSettings.showOnProduct && url.includes('/products/')) return true;
    if (buttonSettings.showOnCollection && url.includes('/collections/')) return true;
    
    return false;
  }

  function createScrollButton() {
    if (!shouldShowButton()) return;

    const button = document.createElement('button');
    button.className = `scroll-to-top-button ${buttonSettings.buttonShape} ${buttonSettings.buttonPosition}`;
    button.innerHTML = 'â†‘';
    button.style.backgroundColor = buttonSettings.bgColor;
    button.style.color = buttonSettings.iconColor;
    button.setAttribute('aria-label', 'Scroll to top');

    button.addEventListener('mouseenter', function() {
      this.style.backgroundColor = buttonSettings.hoverColor;
    });

    button.addEventListener('mouseleave', function() {
      this.style.backgroundColor = buttonSettings.bgColor;
    });

    button.addEventListener('click', function() {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });

    document.body.appendChild(button);

    // Show/hide button on scroll
    window.addEventListener('scroll', function() {
      if (window.scrollY > 300) {
        button.classList.add('show');
      } else {
        button.classList.remove('show');
      }
    });
  }

  // Initialize button when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', createScrollButton);
  } else {
    createScrollButton();
  }
</script>
